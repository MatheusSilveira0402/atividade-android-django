<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p7"
    tools:context=".MainActivity2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:background="@drawable/p6"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:text="Digite o nome da carta:"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editnome_carta"
            android:hint="Digite nome da carta"
            android:background="#FFFFFF"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:text="Digite o atributo da carta:"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:id="@+id/editatributo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:hint="Digite atributo"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:text="Digite o nÃ­vel da carta:"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editlink_nivel"
            android:hint="Digite nivel"
            android:background="#FFFFFF"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:text="Digite o tipo do monstro:"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittipo_monstro"
            android:hint="Digite tipo  monstro"
            android:background="#FFFFFF"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:text="Digite o tipo da carta:"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittipo_carta"
            android:hint="Digite tipo carta"
            android:background="#FFFFFF"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:text="Digite a quantidade de ataque:"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editataque"
            android:hint="Digite ataque:000"
            android:background="#FFFFFF"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:text="Digite a quantidade defesa:"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editdefesa"
            android:hint="Digite defesa:000"
            android:background="#FFFFFF"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:text="Digite o texto da carta:"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittexto_carta"
            android:hint="Digite texto carta"
            android:background="#FFFFFF"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Cadastrarcartainicial"
            android:text="Cadastrar Carta  no dekc Inicial"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Cadastrarcartaestrutural"
            android:text="Cadastrar Carta no deck Estrutural"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Cadastrarcartaespecial"
            android:text="Cadastrar Carta no deck Especial"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TextResutado"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</ScrollView>